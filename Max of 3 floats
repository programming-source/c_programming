//Given three numbers of type float find the maximum 

#include<stdio.h>
#include<stdlib.h>

float max(float a, float b, float c)
{
	if (a > b && a > c) return a;
	if (b > a && b > c) return b;
	return c;
}

int main()
{
	float a, b, c;
	printf("a: ");
    scanf("%f",&a);
    printf("b: ");
    scanf("%f",&b);
    printf("c: ");
    scanf("%f",&c);
	printf("The max between the 3 numbers is: %f", max(a, b, c));
	return 0;
}
